    <!-- Código para aumentar fonte -->
    <button onclick="increaseFontSize()">Aumentar Fonte</button>
    <!-- Código para diminuir fonte -->
    <button onclick="decreaseFontSize()">Diminuir Fonte</button>
    <!-- Código para resetar tamanho da fonte -->
    <button onclick="resetFontSize()">Tamanho Padrão</button>
    <button onclick="invertColors()">Inverter Cores</button>
